{
  "name": "teams-translator",
  "version": "2.1.0",
  "description": "Teams实时翻译助手 - 跨平台版",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "node build.js",
    "build-win": "electron-builder --win --publish=never",
    "build-mac": "electron-builder --mac --publish=never", 
    "build-linux": "electron-builder --linux --publish=never",
    "build-all": "electron-builder -mwl --publish=never",
    "build-win-only": "node build.js win",
    "build-mac-only": "node build.js mac",
    "build-linux-only": "node build.js linux",
    "build-cross": "node build-cross-platform.js",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "clean": "rimraf dist",
    "prepack": "npm run clean",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["translator", "teams", "clipboard", "electron", "cross-platform"],
  "author": {
    "name": "Teams Translator Team",
    "email": "teams-translator@example.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "openai": "^4.0.0"
  },
  "build": {
    "appId": "com.teamstranslator.app",
    "productName": "Teams翻译助手",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "services/**/*",
      "node_modules/**/*",
      "package.json",
      "config.json",
      "!node_modules/.cache/**/*",
      "!**/*.map"
    ],
    "compression": "maximum",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "category": "Office",
      "maintainer": "Teams Translator Team <teams-translator@example.com>",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Teams翻译助手",
      "artifactName": "${productName}-${version}-${arch}-setup.${ext}",
      "deleteAppDataOnUninstall": false
    },
    "dmg": {
      "title": "Teams翻译助手 ${version}",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "deb": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-${arch}-portable.${ext}"
    }
  }
}